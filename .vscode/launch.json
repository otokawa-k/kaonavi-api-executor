{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "src.kaonavi_api_executor.main",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${input:targetTests}",
            ],
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "envFile": "${workspaceFolder}/.env.test",
            "console": "integratedTerminal",
        }
    ],
    "inputs": [
        {
            "id": "targetTests",
            "type": "pickString",
            "description": "Select test target",
            "options": [
                "tests/unit",
                "tests/integration"
            ],
            "default": "tests/unit"
        }
    ]
}